<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Assess_Log"
    android:orientation="vertical"
    android:background="@drawable/round_border4"
    android:padding="25dp">
    <!-- Editext for Search -->
    <!--    android:background="@color/purple_500"-->
    <!-- Editext for Search -->

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:onClick="back"
        android:scaleType="centerInside"
        android:src="@drawable/back2" />

    <EditText
        android:visibility="gone"
        android:id="@+id/search_assess_question"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:hint="Loading .."
        android:inputType="textVisiblePassword"
        android:textColor="#ffffff"
        android:textColorHint="@color/followersBg"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:dividerHeight="13dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/search_assess_question"></ListView>
</RelativeLayout>